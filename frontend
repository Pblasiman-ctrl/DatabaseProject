        JButton loginButton = new JButton("Login");
        panel.add(loginButton);
        
        // Create a text area
        JTextArea textArea = new JTextArea("This is a text area");
        panel.add(textArea);
        
        // Add action listener to the search button
        searchButton.addActionListener(new ActionListener() {
            @Override
